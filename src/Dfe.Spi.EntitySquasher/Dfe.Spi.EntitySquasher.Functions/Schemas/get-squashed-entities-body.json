                      "enum": [
                        "Equals",
                        "Contains",
                        "GreaterThan",
                        "GreaterThanOrEqualTo",
                        "LessThan",
                        "LessThanOrEqualTo",
                        "In",
                        "IsNull",
                        "IsNotNull",
                        "Between"
