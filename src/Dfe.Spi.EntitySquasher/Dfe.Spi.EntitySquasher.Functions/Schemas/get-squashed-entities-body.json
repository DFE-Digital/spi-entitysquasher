{
  "type": "object",
  "properties": {
    "algorithm": {
      "type": "string"
    },
    "entityName": {
      "type": "string",
      "enum": [
        "LearningProvider",
        "ManagementGroup",
        "Census",
        "LearningProviderRates",
        "ManagementGroupRates"
      ]
    },
    "entityReferences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "adapterRecordReferences": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "source": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "source"
              ]
            }
          }
        },
        "required": [
          "adapterRecordReferences"
        ]
      }
    },
    "fields": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "aggregatesRequest": {
      "type": "object",
      "properties": {
        "aggregateQueries": {
          "type": "object",
